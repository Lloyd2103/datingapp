<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" focusTraversable="true" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color:rgb(120, 120, 120);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gui.ChatController">

    <VBox layoutX="207.0" layoutY="11.0" prefHeight="580.0" prefWidth="582.0" spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 20px;">
        <children>
            <HBox prefHeight="51.0" prefWidth="562.0" spacing="20.0">
                <children>
                    <Label fx:id="labelName" prefHeight="40.0" prefWidth="292.0">
                        <font>
                            <Font size="15.0" />
                        </font>
                    </Label>
                </children>
                <padding>
                    <Insets left="20.0" right="20.0" />
                </padding>
            </HBox>

            <ScrollPane fx:id="scrollPane_main" prefHeight="482.0" prefWidth="562.0" >
                <content>
                    <VBox fx:id="vbox_messages" prefWidth="550.0" />
                </content>
            </ScrollPane>

            <HBox prefHeight="46.0" prefWidth="595.0" spacing="5.0">
                <children>
                    <TextField fx:id="textfield_message" prefHeight="38.0" prefWidth="501.0" promptText="Nhập tin nhắn" style="-fx-border-radius: 20px; -fx-background-radius: 1000px;">
                        <font>
                            <Font size="14.0" />
                        </font></TextField>
                    <Button fx:id="send_button" mnemonicParsing="false" onAction="#sendMessage" prefHeight="33.0" prefWidth="71.0" text="Gửi" />
                </children>
            </HBox>

        </children>
        <padding>
            <Insets bottom="20.0" left="10.0" right="10.0" top="25.0" />
        </padding>

    </VBox>

    <VBox layoutX="11.0" layoutY="12.0" prefHeight="580.0" prefWidth="186.0" spacing="5.0" style="-fx-background-color: white; -fx-background-radius: 20px;">
        <children>
            <TextField fx:id="search_field" alignment="CENTER" prefHeight="36.0" prefWidth="191.0" promptText="Tìm kiếm" style="-fx-background-radius: 20px;">
                <font>
                    <Font size="14.0" />
                </font>
            </TextField>
            <ScrollPane fx:id="user_room_scrollpane" hbarPolicy="NEVER" prefHeight="464.0" prefWidth="166.0">
                <content>
                    <VBox fx:id="user_room_list" spacing="5.0" />
                </content>
            </ScrollPane>
            <HBox prefHeight="32.0" prefWidth="169.0">
                <children>
                    <Button mnemonicParsing="false" onAction="#createRoom" prefHeight="26.0" prefWidth="92.0" text=" Create Room" />
                    <Button fx:id="exit_button" mnemonicParsing="false" onAction="#exit" prefHeight="26.0" prefWidth="51.0" text="Exit" />
                </children>
            </HBox>
        </children>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
        </padding>
    </VBox>

</AnchorPane>